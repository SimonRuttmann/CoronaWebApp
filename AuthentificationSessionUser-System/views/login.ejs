            </ul>
        </div>
        <!-- Renders error messages, e.g. E-Mail does not exist, Passwort incorrect-->  
        <div class = "errormessage" > 
            <h1>
            <%      if (messages.error) {       %>
            <%=     messages.error              %>
            <%      }                           %>  
            </h1>
        </div>

      
        <div class="login-box">

	        <div class="login-title"> Anmeldung </div>
            <form action="/login" method="POST">
    
   		        <label for="email"class="formlabel">E-Mail</label>
                <input type="text" class="inputfield" id="email" name="email" placeholder="Bitte E-Mail eingeben" required>
    	
                <label for="password" class="formlabel">Passwort</label> 
                <input type="password" class="inputfield" id="password" name="password" placeholder="Bitte Passwort eingeben" required>
        
                <button type="submit" class="loginbutton">Anmelden</button> 
              
           
	        </form>

            <form action="/register" method="GET">
                <button type="submit" class= "loginbutton"> Zur Registrierung </button>
            </form>
          <!--  <input type="button" onclick="location.href='/register'" class="loginbutton">Zur Registrierung</input> -->
          <!--  <button href="/register" class="loginbutton">Zur Registrierung</button> -->
        </div>
    </body>
</html>