    font-weight: bold;
    color: #ECF0F5;
}

.inputfield{
	
	width: 800px;
	display:block;
	background-color: #222;
    padding: 15px;
    border: none;
    border-bottom: 3px solid #0DB8DE;
   	margin-left: 100px;
    margin-right:100px;
    color: white;
    text-align:left;
    font-size: 17px;
    font-weight: bold;
