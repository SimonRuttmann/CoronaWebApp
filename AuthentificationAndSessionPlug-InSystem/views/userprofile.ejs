}


.formlabel {
	display: block;
    margin-left: 100px;
    margin-top: 30px;
    text-align: left;
    font-size: 22px;
    color: #999999;
    font-weight: bold;
    letter-spacing: 1px;
}

.profilebutton {
	margin: 30px;
	width: 500px;
	height: 40px;
	background-color: #111;
	color: white;
	box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
	border: none;
  	cursor: pointer;
    font-size: 20px;
    font-weight: bold;
    letter-spacing: 1px;
}

.profilebutton:hover{
	background-color: #333;
}

input[type="text"][disabled] {
